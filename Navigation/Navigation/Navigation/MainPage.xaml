<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Navigation.MainPage"
             Visual="Material">

    <StackLayout>
        <Entry Placeholder="Punto de partida"
               x:Name="CommingFromTxt"
               TextChanged="CommingFromTxt_TextChanged"
               Margin="50" />
        <Entry Placeholder="Punto de llegada"
               x:Name="GoingToTxt"
               TextChanged="CommingFromTxt_TextChanged"
               Margin="50,10,50,10" />
        <Button Text="Empezar navegación" IsEnabled="False"
                Margin="50,50" x:Name="StartNavegation"
                Clicked="StartNavegation_Clicked"/>
    </StackLayout>
</ContentPage>
